<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="icon" href="assets/img/gna.png">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/dashboard.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
<div class="background-dash"></div>
{{> nav}}
<main>
    <h1>tech stack</h1>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name stack</th>
      <th scope="col">Icon</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    {{#if tech_icon.length}}
    {{#each tech_icon}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.icon_image}}</td>
      <td>
        <a class="btn btn-primary" href="/tech/{{this.id}}/detail" role="button">Edit</a>
        <a class="btn btn-primary" href="/icon-tech/delete/{{this.id}}" role="button">Delete</a></td>
    </tr>
    {{/each}}
    {{/if}}
  </tbody>
</table>
   <a class="btn" href="/tech-upload" role="button">
    <img src="../assets/img/add.png" alt="" class="icon-plus"></a>
    </div>
    <h1>work experience</h1>
    <div class="container-view">
    {{#each work_experience}}
    <a href="/work/{{this.id}}/detail">
        <div style="display: flex; border-radius: 7px; box-shadow: 0.5px 0.5px 5px black; padding: 10px 20px 10px 20px; justify-content: space-between; margin-bottom: 20px;">
            <div class="container-imgtools" style="width: 100px;">
            <img src="../assets/uploads/{{this.image}}" alt="" style="width: 80px;">
            </div>
            <div style="width: 70%;">
            <h4 style="margin-bottom: 0;">{{this.position}}</h4>
            <p style="color: green;font-size: small;">{{this.company}}</p>
            <ul style="list-style: disc;">
                {{#each description}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <div style="display: flex; gap: 10px;">
                {{#each tech}}
                <p class="icn-experience">{{this}}</p>
                {{/each}}
            </div>
            </div>
            <div>
            <p>{{period}}</p> 
            </div>
        </div>
    </a>
    {{/each}}
    <a class="btn" href="/work" role="button">
    <img src="../assets/img/add.png" alt="" class="icon-plus"></a>
    </div>

    <h1>Portofolio</h1>
    <div class="container-view">
    {{#if portofolio.length}}
    {{#each portofolio}}
    <a href="/portofolio/{{this.id}}/detail">
        <div class="card">
                <div class="card-frame-img">
                    <img src="../assets/uploads/{{this.image}}" class="card-img-top" alt="...">
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <div style="display: flex; gap: 10px;">
                        {{#each techno}}
                        <div style="display: flex; gap: 10px;">
                            <p class="icn-experience">{{this}}</p>
                        </div>
                        {{/each}}
                    </div>
                    <div style="display:flex; flex-direction: row; gap:20px;">
                        {{#if git_url.length}}
                            <i class="bi bi-github">  available</i>
                        {{/if}}
                        {{#if demo_url.length}}
                            <i class="bi bi-camera-video">  available</i>
                        {{/if}}
                    </div>
                </div>
            </div>
        </a>
    {{/each}}
    {{/if}}
    <a class="btn" href="/portofolio" role="button">
    <img src="../assets/img/add.png" alt="" class="icon-plus"></a>
    </div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
</body>
</html>